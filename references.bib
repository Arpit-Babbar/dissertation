@article{Lu2021,
author = {Lu, Jianfang and Liu, Yong and Shu, Chi-Wang},
title = {An Oscillation-free Discontinuous Galerkin Method for Scalar Hyperbolic Conservation Laws},
journal = {SIAM Journal on Numerical Analysis},
