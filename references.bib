@article{bohm2020,
title = {An entropy stable nodal discontinuous Galerkin method for the resistive MHD equations. Part I: Theory and numerical verification},
journal = {Journal of Computational Physics},
volume = {422},
pages = {108076},
year = {2020},
issn = {0021-9991},
